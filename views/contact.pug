extends base.pug

block scripts
  script(src='static/script.js')

block style 
  style
    include ../static/style.css
    include ../static/stylecontact.css

block content 
  .container 
    h1 Contact Us
    form(action="/contact", method="post" class="myform") 
      input(type="text",class="myInput",name="name",placeholder="Enter Your Name")
      input(type="phone",class="myInput",name="phone",placeholder="Enter Your Number")
      input(type="email",class="myInput",name="email",placeholder="Enter Your Email")
      input(type="address",class="myInput",name="address",placeholder="Enter Your Address")
      input(type="dsc",class="myInput",name="dsc",placeholder="Enter Your Concern")
      button(class="btn")
        |Submit